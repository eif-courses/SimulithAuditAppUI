<MudDialog>
    <DialogContent>
        <MudTextField T="string" @bind-Value="TextValue" Label="Name"></MudTextField>
        <MudSelect T="string" @bind-Value="TextDescription"  Label="Favorite Coffee" AnchorOrigin="Origin.BottomCenter">
            <MudSelectItem Value="@("Cappuccino")" />
            <MudSelectItem Value="@("Cafe Latte")" />
            <MudSelectItem Value="@("Espresso")" />
            <MudSelectItem Value="@("Irish Coffee")" />
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>

    </DialogActions>
</MudDialog>
@code {

     string TextValue { get; set; }
     string TextDescription { get; set; }

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(new CategoryModel { 
        CategoryName = TextValue, 
        CategoryDescription = TextDescription
    }));
    void Cancel() => MudDialog.Cancel();
}